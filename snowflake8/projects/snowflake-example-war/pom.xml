<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>com.boluozhai.snowflake</groupId>
	<artifactId>snowflake-example-war</artifactId>
	<packaging>war</packaging>
	<version>0.0.1-SNAPSHOT</version>

	<name>snowflake-example-war</name>
	<url>http://maven.apache.org</url>

	<dependencies>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>com.boluozhai.snowflake</groupId>
			<artifactId>snowflake-spring-web</artifactId>
			<version>0.8.0</version>
		</dependency>

		<dependency>
			<groupId>com.boluozhai.snowflake</groupId>
			<artifactId>snowflake-web</artifactId>
			<version>0.8.0</version>
		</dependency>

		<dependency>
			<groupId>com.boluozhai.snowflake</groupId>
			<artifactId>snowflake-test-lib</artifactId>
			<version>0.8.0</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.1.0</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.boluozhai.snowflake</groupId>
			<artifactId>snowflake-rest-web</artifactId>
			<version>0.8.0</version>
		</dependency>

	</dependencies>
	<build>
		<finalName>snowflake-example-war</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>


</project>