<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>


	<display-name>snowflake-h2o</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext.xml</param-value>
	</context-param>


	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>


	<!-- servlet -->

	<servlet>
		<servlet-name>rest-root</servlet-name>
		<servlet-class>com.boluozhai.snowflake.h2o.servlet.H2ORestServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>xgit-http-root</servlet-name>
		<servlet-class>com.boluozhai.snowflake.xgit.http.server.servlet.XGitHttpServlet</servlet-class>
	</servlet>


	<!-- mapping -->

	<servlet-mapping>
		<servlet-name>rest-root</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>xgit-http-root</servlet-name>
		<url-pattern>/repo/*</url-pattern>
	</servlet-mapping>


</web-app>
